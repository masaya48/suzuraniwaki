---
import Layout from '../src/layouts/Layout.astro';
import Header from '../src/components/Header.astro';
import Footer from '../src/components/Footer.astro';
import Icon from '../src/components/Icon.astro';

const menuItems = [
	{
		title: '脊柱管狭窄症',
		slug: 'sekichukankyousakushou',
		description: '脊柱管の狭窄による足のしびれや痛みを改善',
		icon: 'activity'
	},
	{
		title: '姿勢改善',
		slug: 'shisei-kaizen',
		description: '背骨を整えて美しい姿勢を取り戻します',
		icon: 'user-check'
	},
	{
		title: '頭痛',
		slug: 'zutsuu',
		description: '慢性的な頭痛の根本原因にアプローチ',
		icon: 'alert-circle'
	},
	{
		title: '骨盤矯正・産後骨盤矯正',
		slug: 'kotsuban-kyousei',
		description: '骨盤のゆがみを整え、産後の体調不良を改善',
		icon: 'baby'
	},
	{
		title: '膝痛・変形性膝関節症',
		slug: 'hiza',
		description: '膝の痛みや変形を改善し、歩行を楽に',
		icon: 'activity'
	},
	{
		title: '変形性股関節症',
		slug: 'kokansetsu',
		description: '股関節の痛みや可動域制限を改善',
		icon: 'activity'
	},
	{
		title: '椎間板ヘルニア',
		slug: 'hernia',
		description: '椎間板の圧迫を軽減し、痛みやしびれを改善',
		icon: 'alert-triangle'
	},
	{
		title: '坐骨神経痛',
		slug: 'zakotsu',
		description: 'お尻から足にかけての痛みやしびれを軽減',
		icon: 'zap'
	},
	{
		title: 'ストレートネック',
		slug: 'straightneck',
		description: '首のカーブを取り戻し、肩こりや頭痛を改善',
		icon: 'activity'
	},
	{
		title: '肩こり・首の痛み',
		slug: 'katakubi',
		description: '慢性的な肩こりや首の痛みを根本から改善',
		icon: 'alert-circle'
	},
	{
		title: '腰痛',
		slug: 'youtsuu',
		description: '急性・慢性の腰痛を改善し、再発を防ぎます',
		icon: 'activity'
	}
];
---

<Layout title="施術メニュー | 「重症症状専門」すずらん整体院">
	<Header />
	<main>
		<section class="page-header">
			<div class="container">
				<h1 class="page-title">施術メニュー</h1>
				<p class="page-description">
					お悩みに合わせた様々な施術メニューをご用意しております
				</p>
			</div>
		</section>

		<section class="menu-grid">
			<div class="container">
				<div class="grid">
					{menuItems.map((item) => (
						<a href={`/menu/${item.slug}`} class="menu-card">
							<div class="card-icon">
								<Icon name={item.icon} size={32} />
							</div>
							<h3 class="card-title">{item.title}</h3>
							<p class="card-description">{item.description}</p>
							<div class="card-arrow">
								<Icon name="arrow-right" size={20} />
							</div>
						</a>
					))}
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.page-header {
		background: linear-gradient(135deg, var(--color-cream) 0%, var(--color-cream-light) 100%);
		padding: 4rem 0 3rem;
		text-align: center;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 40px;
	}

	.page-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0 0 1rem 0;
	}

	.page-description {
		font-size: 1.1rem;
		color: var(--color-text-light);
		margin: 0;
	}

	.menu-grid {
		padding: 4rem 0;
		background: var(--color-bg);
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 2rem;
	}

	.menu-card {
		background: white;
		border-radius: 16px;
		padding: 2rem;
		border: 2px solid var(--color-border);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.menu-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 32px rgba(122, 155, 118, 0.15);
		border-color: var(--color-primary);
	}

	.card-icon {
		width: 64px;
		height: 64px;
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		border-radius: 16px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		flex-shrink: 0;
	}

	.card-title {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0;
		font-family: var(--font-heading);
	}

	.card-description {
		font-size: 1rem;
		color: var(--color-text-light);
		margin: 0;
		line-height: 1.6;
		flex-grow: 1;
	}

	.card-arrow {
		color: var(--color-primary);
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 600;
		transition: transform 0.3s;
	}

	.menu-card:hover .card-arrow {
		transform: translateX(4px);
	}

	@media (max-width: 768px) {
		.container {
			padding: 0 20px;
		}

		.page-header {
			padding: 3rem 0 2rem;
		}

		.page-title {
			font-size: 2rem;
		}

		.page-description {
			font-size: 1rem;
		}

		.menu-grid {
			padding: 3rem 0;
		}

		.grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.menu-card {
			padding: 1.5rem;
		}

		.card-title {
			font-size: 1.25rem;
		}
	}
</style>
