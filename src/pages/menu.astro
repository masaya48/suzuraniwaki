---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import RecommendedTreatments from '../components/RecommendedTreatments.astro';
import DRTAbout from '../components/DRTAbout.astro';
import MaternityMenu from '../components/MaternityMenu.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="施術メニュー | からだサポートSUZURAN">
	<Header />
	<main>
		<section class="page-header">
			<div class="container">
				<h1 class="page-title">施術メニュー</h1>
				<p class="page-description">
					お悩みに合わせた様々な施術メニューをご用意しております
				</p>
			</div>
		</section>
		<RecommendedTreatments />
		<DRTAbout />
		<MaternityMenu />
	</main>
	<Footer />
</Layout>

<style>
	.page-header {
		background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
		padding: 4rem 0 3rem;
		text-align: center;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.page-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0 0 1rem 0;
	}

	.page-description {
		font-size: 1.1rem;
		color: var(--color-text-light);
		margin: 0;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 0 2rem;
		}

		.page-title {
			font-size: 2rem;
		}

		.page-description {
			font-size: 1rem;
		}
	}
</style>
