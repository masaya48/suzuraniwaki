---
import { Image } from 'astro:assets';
import Icon from './Icon.astro';
---

<header class="header">
	<div class="header-top">
		<div class="container">
			<div class="header-content">
				<a href="/" class="logo">
					<img src="/logo.png" alt="からだサポートSUZURAN" class="logo-image" />
					<h1>からだサポート<br />SUZURAN</h1>
				</a>
				<div class="header-info">
					<div class="contact-info">
						<div class="address">
							<Icon name="map-pin" size={16} class="address-icon" />
							<span>福島県いわき市内郷内町四方北114-3</span>
						</div>
						<div class="phone">
							<a href="tel:090-2999-3760" class="phone-link">
								<Icon name="phone" size={20} class="phone-icon" />
								<span class="phone-number">090-2999-3760</span>
							</a>
						</div>
					</div>
					<a href="line://ti/p/%40hss5518z" class="btn-line">
					<Image src="/LINE_Brand_icon.png" alt="LINE" width={24} height={24} class="line-icon" />
					LINE予約
				</a>
				</div>
			</div>
		</div>
	</div>
	<nav class="nav">
		<div class="container">
			<ul class="nav-list">
				<li><a href="/">HOME</a></li>
				<li><a href="/first">初めての方</a></li>
				<li><a href="/menu">メニュー</a></li>
				<li><a href="/access">アクセス</a></li>
				<li><a href="/price">料金表</a></li>
			</ul>
		</div>
	</nav>
</header>

<style>
	.header {
		background: rgba(254, 252, 249, 0.95);
		backdrop-filter: blur(10px);
		box-shadow: 0 2px 16px rgba(212, 129, 111, 0.08);
		position: sticky;
		top: 0;
		z-index: 100;
		border-bottom: 1px solid var(--color-border);
		animation: fadeIn 0.6s ease-out;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 40px;
	}

	.header-top {
		padding: 1.25rem 0;
	}

	.header-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 1rem;
		text-decoration: none;
		transition: transform 0.3s;
	}

	.logo:hover {
		transform: translateY(-2px);
	}

	.logo-image {
		width: 60px;
		height: 60px;
		object-fit: contain;
		border-radius: 50%;
		border: 2px solid var(--color-cream);
	}

	.logo h1 {
		margin: 0;
		font-size: 1.5rem;
		font-weight: 700;
		font-family: var(--font-display);
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1.3;
		letter-spacing: 0.02em;
	}

	.header-info {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 0.4rem;
	}

	.address {
		font-size: 0.875rem;
		color: var(--color-text-light);
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.address-icon {
		flex-shrink: 0;
	}

	.phone-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 1.25rem;
		font-weight: 700;
		font-family: var(--font-heading);
		color: var(--color-primary);
		transition: all 0.3s;
	}

	.phone-link:hover {
		color: var(--color-accent);
		transform: translateX(-2px);
	}

	.phone-icon {
		flex-shrink: 0;
	}

	.btn-line {
		background: linear-gradient(135deg, #06c755 0%, #00b900 100%);
		color: white;
		padding: 0.875rem 2rem;
		border-radius: 50px;
		font-weight: 700;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		white-space: nowrap;
		box-shadow: 0 4px 16px rgba(6, 199, 85, 0.25);
		position: relative;
		overflow: hidden;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.line-icon {
		width: 24px;
		height: 24px;
		flex-shrink: 0;
	}

	.btn-line::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, #00b900 0%, #009900 100%);
		opacity: 0;
		transition: opacity 0.3s;
	}

	.btn-line:hover::before {
		opacity: 1;
	}

	.btn-line:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(6, 199, 85, 0.35);
	}

	.nav {
		background: linear-gradient(to bottom, rgba(245, 235, 224, 0.3), transparent);
		border-top: 1px solid var(--color-border);
	}

	.nav-list {
		display: flex;
		list-style: none;
		margin: 0;
		padding: 0;
		justify-content: center;
		gap: 3rem;
	}

	.nav-list a {
		display: block;
		padding: 1.1rem 0.5rem;
		font-weight: 600;
		font-family: var(--font-heading);
		color: var(--color-text);
		transition: all 0.3s;
		border-bottom: 3px solid transparent;
		position: relative;
	}

	.nav-list a::before {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%) scaleX(0);
		width: 100%;
		height: 3px;
		background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
		border-radius: 10px;
		transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.nav-list a:hover {
		color: var(--color-primary);
	}

	.nav-list a:hover::before {
		transform: translateX(-50%) scaleX(1);
	}

	@media (max-width: 1024px) {
		.container {
			padding: 0 30px;
		}

		.nav-list {
			gap: 2rem;
		}
	}

	@media (max-width: 768px) {
		.header-top {
			padding: 0.75rem 0;
		}

		.container {
			padding: 0 16px;
		}

		.header-content {
			flex-direction: row;
			align-items: center;
			gap: 0.5rem;
		}

		.logo {
			gap: 0.5rem;
			min-width: 0;
		}

		.logo-image {
			width: 45px;
			height: 45px;
		}

		.logo h1 {
			font-size: 1rem;
			line-height: 1.2;
		}

		.header-info {
			display: flex;
			flex-direction: row;
			align-items: center;
			gap: 0.5rem;
			flex: 1;
			justify-content: flex-end;
			min-width: 0;
		}

		.contact-info {
			gap: 0.25rem;
		}

		.address {
			display: none;
		}

		.phone-link {
			font-size: 0.95rem;
			gap: 0.25rem;
		}

		.phone-number {
			display: inline;
		}

		.phone-icon {
			font-size: 1.1rem;
		}

		.btn-line {
			padding: 0.6rem 1rem;
			font-size: 0.8rem;
		}

		.nav-list {
			flex-wrap: nowrap;
			gap: 0;
			overflow-x: auto;
			-webkit-overflow-scrolling: touch;
			justify-content: flex-start;
			scrollbar-width: none;
		}

		.nav-list::-webkit-scrollbar {
			display: none;
		}

		.nav-list li {
			flex: 0 0 auto;
		}

		.nav-list a {
			padding: 0.75rem 0.875rem;
			font-size: 0.85rem;
			white-space: nowrap;
		}
	}

	@media (max-width: 480px) {
		.container {
			padding: 0 12px;
		}

		.header-content {
			gap: 0.4rem;
		}

		.logo-image {
			width: 40px;
			height: 40px;
		}

		.logo h1 {
			font-size: 0.9rem;
		}

		.header-info {
			gap: 0.4rem;
		}

		.phone-link {
			font-size: 0.85rem;
		}

		.phone-number {
			display: none;
		}

		.btn-line {
			padding: 0.5rem 0.75rem;
			font-size: 0;
			min-width: 44px;
			justify-content: center;
		}

		.btn-line .line-icon {
			margin: 0;
		}

		.nav-list a {
			padding: 0.7rem 0.7rem;
			font-size: 0.8rem;
		}
	}
</style>
