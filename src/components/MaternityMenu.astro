<section class="maternity-menu">
	<div class="container">
		<h2 class="section-title">料金</h2>

		<div class="menu-section">
			<h3 class="menu-section-title">基本料金</h3>

			<div class="menu-item-large">
				<div class="menu-header">
					<h4 class="menu-name">初回</h4>
					<p class="menu-name-description">9,000円が、ホームページを見てくれた方限定</p>
				</div>

				<div class="menu-price">3,500円</div>
				<p class="menu-description">
					初めての方限定のお得な料金です
				</p>
			</div>

			<div class="menu-item-large" style="margin-top: 2rem;">
				<div class="menu-header">
					<h4 class="menu-name">2回目以降</h4>
				</div>
				<div class="menu-price">6,500円</div>
				<p class="menu-description">
					腰痛、肩こり、背中の痛みなど、お辛い症状をご相談ください
				</p>
			</div>
		</div>
	</div>
</section>

<style>
	.maternity-menu {
		padding: 4rem 0;
		background: var(--color-bg-gray);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.section-title {
		text-align: center;
		font-size: 2rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0 0 3rem 0;
		position: relative;
		padding-bottom: 1rem;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: var(--color-accent);
		border-radius: 2px;
	}

	.intro-message {
		background: linear-gradient(135deg, #fef2f2 0%, #fce7f3 100%);
		padding: 2.5rem;
		border-radius: 24px;
		margin-bottom: 3rem;
		text-align: center;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
		border: 1px solid rgba(244, 165, 174, 0.2);
	}

	.intro-title {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0 0 1rem 0;
	}

	.intro-text {
		color: var(--color-text);
		line-height: 1.8;
		margin: 0;
	}

	.intro-text strong {
		color: var(--color-accent);
		font-weight: 700;
	}

	.menu-section {
		background: white;
		padding: 3rem;
		border-radius: 24px;
		margin-bottom: 2rem;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
		border: 1px solid var(--color-border);
	}

	.menu-section-title {
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0 0 2rem 0;
		padding-bottom: 1rem;
		border-bottom: 2px solid var(--color-accent);
	}

	.section-intro {
		text-align: center;
		font-size: 1.25rem;
		color: var(--color-text);
		margin: 0 0 2rem 0;
		font-weight: 600;
	}

	.price-highlight {
		color: var(--color-accent);
		font-size: 1.75rem;
		font-weight: 700;
	}

	.menu-item-large {
		background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
		padding: 2.5rem;
		border-radius: 20px;
		margin-bottom: 2rem;
		border: 2px solid var(--color-primary);
	}

	.menu-header {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
	}

	.menu-name {
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0;
	}

	.menu-name-description {
		font-size: 1.25rem;
		font-weight: normal;
	}

	.menu-duration {
		background: var(--color-primary);
		color: white;
		padding: 0.5rem 1.5rem;
		border-radius: 50px;
		font-weight: 700;
		font-size: 1.1rem;
	}

	.menu-price {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-primary);
		margin-bottom: 1rem;
	}

	.menu-description {
		color: var(--color-text);
		line-height: 1.8;
		margin: 0;
		font-size: 1.05rem;
	}

	.menu-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.menu-card {
		background: var(--color-bg-gray);
		padding: 2rem;
		border-radius: 20px;
		border: 2px solid var(--color-border);
		transition: all 0.3s;
	}

	.menu-card:hover {
		border-color: var(--color-accent);
		transform: translateY(-4px);
		box-shadow: 0 8px 24px rgba(244, 165, 174, 0.2);
	}

	.menu-card-header {
		margin-bottom: 1.5rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid var(--color-accent);
	}

	.menu-card-name {
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0 0 0.75rem 0;
		line-height: 1.4;
	}

	.menu-card-duration {
		display: inline-block;
		background: var(--color-accent);
		color: white;
		padding: 0.4rem 1.25rem;
		border-radius: 50px;
		font-weight: 600;
		font-size: 0.95rem;
	}

	.menu-card-description {
		color: var(--color-text);
		line-height: 1.7;
		margin: 0;
	}

	.ticket-card {
		background: linear-gradient(135deg, #fef2f2 0%, #fce7f3 100%);
		padding: 2.5rem;
		border-radius: 20px;
		position: relative;
		border: 2px solid var(--color-accent);
		box-shadow: 0 4px 16px rgba(244, 165, 174, 0.15);
	}

	.ticket-card.special {
		margin-bottom: 0;
	}

	.ticket-badge {
		position: absolute;
		top: -12px;
		right: 30px;
		background: var(--color-accent);
		color: white;
		padding: 0.5rem 1.5rem;
		border-radius: 50px;
		font-weight: 700;
		font-size: 0.9rem;
		box-shadow: 0 4px 12px rgba(244, 165, 174, 0.4);
	}

	.ticket-title {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin: 0 0 1.5rem 0;
		text-align: center;
	}

	.ticket-content {
		text-align: center;
	}

	.ticket-info {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		margin-bottom: 1rem;
	}

	.ticket-count {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--color-text);
	}

	.ticket-price {
		font-size: 2.25rem;
		font-weight: 700;
		color: var(--color-accent);
	}

	.ticket-note {
		color: var(--color-text);
		margin: 0;
		font-size: 1.1rem;
	}

	.ticket-note strong {
		color: var(--color-accent);
		font-size: 1.5rem;
	}

	.notes {
		background: white;
		padding: 1.5rem 2rem;
		border-radius: 12px;
		border: 1px solid var(--color-border);
	}

	.notes-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.notes-list li {
		color: var(--color-text-light);
		margin-bottom: 0.5rem;
		font-size: 0.95rem;
	}

	.notes-list li:last-child {
		margin-bottom: 0;
	}

	@media (max-width: 768px) {
		.maternity-menu {
			padding: 3rem 0;
		}

		.section-title {
			font-size: 1.75rem;
		}

		.intro-message {
			padding: 2rem 1.5rem;
		}

		.intro-title {
			font-size: 1.25rem;
		}

		.menu-section {
			padding: 2rem 1.5rem;
		}

		.menu-section-title {
			font-size: 1.5rem;
		}

		.menu-item-large {
			padding: 2rem 1.5rem;
		}

		.menu-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 1rem;
		}

		.menu-name {
			font-size: 1.5rem;
		}

		.menu-price {
			font-size: 2rem;
		}

		.menu-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.ticket-card {
			padding: 2rem 1.5rem;
		}

		.ticket-info {
			flex-direction: column;
			gap: 0.5rem;
		}

		.notes {
			padding: 1.25rem 1.5rem;
		}
	}
</style>
