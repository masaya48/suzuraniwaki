<style>
	.hero {
		position: relative;
		min-height: 85vh;
		display: flex;
		align-items: center;
		padding: 6rem 0 4rem;
		overflow: hidden;
		background: linear-gradient(to bottom, var(--color-bg-light), var(--color-bg));
	}

	.hero-bg-decoration {
		position: absolute;
		top: -10%;
		right: -5%;
		width: 50%;
		height: 70%;
		background: radial-gradient(
			circle at center,
			var(--color-cream) 0%,
			transparent 70%
		);
		opacity: 0.6;
		border-radius: 50%;
		pointer-events: none;
		animation: float 20s ease-in-out infinite;
	}

	@keyframes float {
		0%, 100% { transform: translate(0, 0) scale(1); }
		50% { transform: translate(-20px, -30px) scale(1.05); }
	}

	.hero-content {
		position: relative;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 40px;
		display: grid;
		grid-template-columns: 1.1fr 0.9fr;
		gap: 5rem;
		align-items: center;
		animation: fadeIn 1s ease-out;
	}

	.hero-text {
		animation: fadeInUp 1s ease-out;
	}

	.hero-badge {
		display: inline-block;
		padding: 0.5rem 1.25rem;
		background: var(--color-cream);
		color: var(--color-primary-dark);
		border-radius: 50px;
		font-size: 0.875rem;
		font-weight: 600;
		letter-spacing: 0.05em;
		margin-bottom: 1.5rem;
		border: 1px solid var(--color-border);
		animation: fadeInUp 1s ease-out 0.2s backwards;
	}

	.hero-title {
		margin: 0 0 1.5rem 0;
		font-family: var(--font-display);
		font-size: 3.5rem;
		line-height: 1.2;
		letter-spacing: 0.01em;
		animation: fadeInUp 1s ease-out 0.3s backwards;
	}

	.hero-title-line {
		display: block;
		background: linear-gradient(
			135deg,
			var(--color-text) 0%,
			var(--color-text-light) 100%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-title-accent {
		background: linear-gradient(
			135deg,
			var(--color-primary) 0%,
			var(--color-accent) 100%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.hero-title-accent::after {
		content: '';
		position: absolute;
		bottom: 0.2em;
		left: 0;
		width: 60%;
		height: 0.15em;
		background: linear-gradient(
			90deg,
			var(--color-accent) 0%,
			transparent 100%
		);
		border-radius: 10px;
		opacity: 0.4;
	}

	.hero-description {
		font-size: 1.05rem;
		line-height: 1.9;
		color: var(--color-text-light);
		margin: 0 0 2.5rem 0;
		animation: fadeInUp 1s ease-out 0.4s backwards;
	}

	.hero-features {
		list-style: none;
		padding: 0;
		margin: 0 0 3rem 0;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
		animation: fadeInUp 1s ease-out 0.5s backwards;
	}

	.hero-features li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.75rem 1rem;
		background: white;
		border-radius: 12px;
		border: 1px solid var(--color-border);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.hero-features li:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 24px rgba(212, 129, 111, 0.12);
		border-color: var(--color-primary);
	}

	.feature-icon {
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.feature-text {
		font-size: 0.95rem;
		font-weight: 500;
		color: var(--color-text);
	}

	.hero-cta {
		display: flex;
		gap: 1.25rem;
		flex-wrap: wrap;
		animation: fadeInUp 1s ease-out 0.6s backwards;
	}

	.btn-primary,
	.btn-secondary {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1.25rem 2.25rem;
		border-radius: 60px;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		text-align: center;
		white-space: nowrap;
		cursor: pointer;
		border: none;
	}

	.btn-primary {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
		color: white;
		box-shadow: 0 8px 24px rgba(212, 129, 111, 0.3);
		position: relative;
		overflow: hidden;
	}

	.btn-primary::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
		opacity: 0;
		transition: opacity 0.4s;
	}

	.btn-primary:hover::before {
		opacity: 1;
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 12px 32px rgba(212, 129, 111, 0.4);
	}

	.btn-primary .btn-text,
	.btn-primary .btn-icon {
		position: relative;
		z-index: 1;
	}

	.btn-text {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.15rem;
	}

	.btn-label {
		font-size: 1rem;
		font-weight: 600;
	}

	.btn-sublabel {
		font-size: 0.875rem;
		font-weight: 500;
		opacity: 0.95;
	}

	.btn-secondary {
		background: white;
		color: var(--color-primary);
		border: 2px solid var(--color-primary);
		box-shadow: 0 4px 16px rgba(212, 129, 111, 0.15);
		position: relative;
	}

	.btn-secondary:hover {
		background: var(--color-cream-light);
		transform: translateY(-3px);
		box-shadow: 0 8px 24px rgba(212, 129, 111, 0.25);
		border-color: var(--color-accent);
	}

	.btn-arrow {
		transition: transform 0.3s;
		font-size: 1.25rem;
	}

	.btn-secondary:hover .btn-arrow {
		transform: translateX(4px);
	}

	.btn-icon {
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	/* Hero Visual */
	.hero-visual {
		position: relative;
		animation: fadeInUp 1s ease-out 0.4s backwards;
	}

	.hero-image-frame {
		position: relative;
		width: 100%;
	}

	.hero-image-placeholder {
		width: 100%;
		aspect-ratio: 3/4;
		background: linear-gradient(
			135deg,
			var(--color-cream) 0%,
			var(--color-cream-light) 100%
		);
		border-radius: 32px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--color-text-light);
		font-size: 1.1rem;
		font-weight: 500;
		box-shadow:
			0 20px 60px rgba(212, 129, 111, 0.2),
			0 0 0 1px var(--color-border);
		position: relative;
		overflow: hidden;
	}

	.hero-image-placeholder::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background:
			radial-gradient(circle at 30% 40%, rgba(212, 129, 111, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 70% 60%, rgba(95, 122, 97, 0.08) 0%, transparent 50%);
	}

	.hero-decoration-circle {
		position: absolute;
		top: -8%;
		right: -8%;
		width: 35%;
		aspect-ratio: 1;
		background: linear-gradient(
			135deg,
			var(--color-secondary-light) 0%,
			var(--color-secondary) 100%
		);
		border-radius: 50%;
		opacity: 0.15;
		z-index: -1;
		animation: float 15s ease-in-out infinite;
	}

	.hero-decoration-line {
		position: absolute;
		bottom: 10%;
		left: -12%;
		width: 25%;
		height: 4px;
		background: linear-gradient(
			90deg,
			var(--color-accent) 0%,
			transparent 100%
		);
		border-radius: 10px;
		opacity: 0.6;
	}

	.hide-mobile {
		display: inline;
	}

	@media (max-width: 1024px) {
		.hero-content {
			padding: 0 30px;
			gap: 3rem;
		}

		.hero-title {
			font-size: 3rem;
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding: 3rem 0 2rem;
			min-height: auto;
		}

		.hero-content {
			grid-template-columns: 1fr;
			gap: 3rem;
			padding: 0 20px;
		}

		.hero-title {
			font-size: 2.25rem;
		}

		.hero-features {
			grid-template-columns: 1fr;
		}

		.hero-cta {
			flex-direction: column;
			width: 100%;
		}

		.btn-primary,
		.btn-secondary {
			width: 100%;
			justify-content: center;
		}

		.hide-mobile {
			display: none;
		}

		.hero-visual {
			order: -1;
		}

		.hero-image-placeholder {
			aspect-ratio: 4/3;
		}
	}
</style>
